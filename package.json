{
  "name": "yahgts",
  "type": "module",
  "version": "0.0.1",
  "description": "yet another hex grid library in typescript",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -r esm -r ts-node/register test/**/*.ts",
    "build:docs": "typedoc --out ./docs ./src",
