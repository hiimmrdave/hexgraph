{
  "name": "yahgts",
  "type": "module",
  "version": "0.0.1",
  "description": "yet another hex grid library in typescript",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.ts",
    "lint": "eslint --fix ./src/*",
    "prebuild:docs": "npm run clean:docs",
    "build:docs": "typedoc --out ./docs ./src",
    "prebuild": "npm run lint",
    "build": "tsc",
    "clean:build": "rimraf build/*",
    "clean:docs": "rimraf docs/*",
    "clean:js": "rimraf js/*",
    "clean": "npm run clean:docs && npm run clean:js",
    "predeploy": "npm run build",
    "deploy": "node tersify.js && npm run clean:build"
  },
  "author": "Dave Vogt",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiimmrdave/hexgraph.git"
  },
  "dependencies": {
    "xstate": "^4.13.0"
  },
  "devDependencies": {
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "terser": "^5.3.5",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  }
}
