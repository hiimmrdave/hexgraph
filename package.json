{
  "name": "yahgts",
  "type": "module",
  "version": "0.0.1",
  "description": "yet another hex grid library in typescript",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -r ts-node/register test/**/*.ts",
    "lint": "eslint --fix ./src/*",
    "prebuild:docs": "npm run clean:docs",
    "build:docs": "typedoc --entryPointStrategy expand --out ./docs ./src",
    "build:types": "tsc --declaration --emitDeclarationsOnly --outdir ./types",
    "prebuild": "npm run lint",
    "build": "tsc",
    "clean:build": "rimraf build/*",
    "clean:docs": "rimraf docs/*",
    "clean:js": "rimraf js/*",
    "clean": "npm run clean:docs && npm run clean:js",
    "predeploy": "npm run build",
    "deploy": "node tersify.js && npm run clean:build"
  },
  "author": "Dave Vogt",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiimmrdave/hexgraph.git"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  }
}
