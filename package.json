{
  "name": "yahgts",
  "type": "module",
  "version": "0.0.1",
  "description": "yet another hex grid library in typescript",
  "private": true,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha -r esm -r ts-node/register -r ts-mocha test/**/*.ts",
    "lint": "eslint --fix ./src/*",
    "prebuild:docs": "npm run clean:docs",
    "build:docs": "typedoc --out ./docs ./src",
    "prebuild": "npm run lint && mkdir -p ./public/img & mkdir -p ./public/js ",
    "build": "tsc",
    "clean:dist": "rimraf build/*",
    "clean:docs": "rimraf docs/*",
    "clean:public": "rimraf public/*",
    "clean": "npm run clean:dist && npm run clean:docs && npm run clean:public",
    "predeploy": "npm run build && node tersify.js",
    "deploy": "cp index.html style.css ./public/ && cp ./img/favicon.svg ./public/img/"
  },
  "author": "Dave Vogt",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "mocha": "^8.1.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "terser": "^5.2.1",
    "ts-loader": "^8.0.2",
    "ts-mocha": "^7.0.0",
    "ts-node": "^9.0.0",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  }
}
