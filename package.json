    "prebuild": "npm run lint",
    "build": "npm run build:docs & tsc && eslint --fix ./dist/*.js --no-ignore"
  },
  "author": "Dave Vogt",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@microsoft/tsdoc": "^0.12.20",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.15",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "mocha": "^7.2.0",
    "prettier": "^1.19.1",
    "terser": "^5.0.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  }
