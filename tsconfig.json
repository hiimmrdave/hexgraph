{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "NodeNext",
    "removeComments": true,
    "pretty": true,
    "inlineSourceMap": true,
    "outDir": "./build/",
    "lib": ["esnext", "dom"],
    "moduleResolution": "NodeNext"
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
